<!--BANNER -->
<div class="students-header-container" style="margin-bottom: 30px;">
  <div class="classy-students-header">
    <div class="classy-content-header">
      <div class="header-message"></div>
      <h1> Welcome
        <%= current_teacher.teacher_name %>! </h1>
      <p>Please update your students' information to ensure best results.</p>
    </div>
  </div>
  <div class="triangle"></div>
</div>
<!-- TABS -->

<div class="classy-tabs">
  <ul class="nav nav-tabs  ml-4 classy-ul-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="tru" style="font-size: 20px;">My Students</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false" style="font-size: 20px;">View All Students</a>
    </li>
  </ul>
</div>

