<!--BANNER -->
<div class="students-header-container" style="margin-bottom: 30px;">
  <div class="classy-students-header">
    <div class="classy-content-header">
      <div class="header-message"></div>
      <h1> Welcome
        <%= current_teacher.teacher_name %>! </h1>
      <p>Please update your students' information to ensure best results.</p>
    </div>
  </div>
  <div class="triangle"></div>
</div>

<!-- TABS -->
  <ul class="nav nav-tabs d-flex justify-content-start ml-4" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="tru" style= "font-size: 20px;">My Students</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false" style= "font-size: 20px;">View All Students</a>
  </li>
</ul>


<!-- STICKY HEADER  -->
<div class="wrapper" id="header-container-sticky">
    <div class="container">
      <div class="sticky-header-container" >
      <div class="header-flex">
       <%= button_to "Save and Submit", sortbutton_path, method: :post, class: "yellow-btn" %>
        <div class="header-parameters">
          <div class="header-content" style="padding-top: 8px;">ESL</div>
          <div class="header-content">Gifted &<br>Talented</div>
          <div class="header-content" style="padding-top: 8px;">SPED</div>
          <div class="header-content">Medical <br>Alert</div>
        </div>
        <div class="show-notes-btn">
          <div class="btn btn-outline-info expand-view" style="margin-left: 320px;">
            <i class='far fa-angle-double-down'></i>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
<!-- STUDENT CARD  -->
<div class="tab-content" id="myTabContent">
 <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
   <div class="section-student-cards">
    <div class="container m-auto container-student-cards">
      <% @mystudents.each_with_index  do |student, index| %>
        <%= render "students/card", student: student %>
      <% end %>
    </div>
   </div>
 </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <div class="section-student-cards">
    <div class="container m-auto container-student-cards">
      <% @mygradestudents.each_with_index  do |student, index| %>
        <%= render "students/card", student: student %>
      <% end %>
    </div>
   </div>
  </div>
</div>


