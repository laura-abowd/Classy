<!--BANNER -->
<div class="students-header-container" style="margin-bottom: 30px;">
  <div class="classy-students-header">
    <div class="classy-content-header">
      <div class="header-message"></div>
      <h1> Welcome
        <%= current_teacher.teacher_name %>! </h1>
      <p>Please update your students' information to ensure best results.</p>
    </div>
  </div>
  <div class="triangle"></div>
</div>
<!-- TABS -->
<div class="classy-tabs">
  <ul class="nav nav-tabs  ml-4 classy-ul-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="tru" style="font-size: 20px;">My Students</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false" style="font-size: 20px;">View Status</a>
    </li>
  </ul>
</div>
<!-- STUDENT CARD  -->
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

    <!-- STICKY HEADER  -->
    <div class="wrapper" id="header-container-sticky">
      <div class="container">
        <div class="sticky-header-container">
          <div class="header-flex">
            <%= button_tag "Save and submit", class: "yellow-btn", id: "saveclass-btn" %>

        <div class="alert alert-success" role="alert" style="display: none">
          <style>
           .alert {
            font-size: 20px;
          </style>
         Your class is saved. Please view the teacher status.
        </div>

            <div class="header-parameters">
              <div class="header-content" style="padding-top: 8px;">ESL</div>
              <div class="header-content">Gifted &<br>Talented</div>
              <div class="header-content" style="padding-top: 8px;">SPED</div>
              <div class="header-content">Medical <br>Alert</div>
            </div>
            <div class="show-notes-btn">
              <div class="btn btn-outline-info expand-view" style="margin-left: 240px;">
                See All Notes
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
    <div class="section-student-cards">
      <div class="container m-auto container-student-cards">
        <% @mystudents.each_with_index  do |student, index| %>
        <%= render "students/card", student: student %>
        <% end %>
      </div>
    </div>
  </div>
  <!--   review teacher status tab -->
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <!--     container div "teacher-status-container -->
    <div class="wrapper-teacher-status">

      <div class="teacher-status-container">
        <!-- Title-teacher-status-div -->
        <div class="teacher-status-title">
          <h3>Teacher Status</h3>
        </div>
        <!--       Teacher status div -->
        <div class="teacher-status">
          <div class="teacher-status-labels">
            <% @mygradeteachers.each do |teacher| %>
            <!-- <div class="teacher-label-submitted"> -->
            <div class="teacher-name-status">
              <%= teacher.teacher_name %>
            </div>
            <div class="badge badge-pill badge-success">
              <%= teacher.classroom.readystatus? ? "Submitted" : "Pending" %>
            </div>

            <% end %>


        <!-- <div class="teacher-status-button-container"> -->

       <!--  </div> -->


           <div class="submitted-teachers">
             <div class="button-teacher-status">
            <%= button_to "Create Classes", sortbutton_path, method: :post, class: "status-yellow-btn" %>
          </div>
            <!-- All students have been submitted. -->
          </div>

          </div>

        </div>
      </div>
    </div>
  </div>
