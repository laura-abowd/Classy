<!-- STUDENT CARD  -->
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
    <div class="section-student-cards">
      <div class="container m-auto container-student-cards">
        <% @mystudents.each_with_index  do |student, index| %>
        <%= render "students/card", student: student %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">


    <h1>this is where the second tab content goes</h1>


  </div>
</div>
