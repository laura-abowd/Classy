<div class="d-flex">
  <div class="tablet-bg-title-2">
    <%= image_tag "avatar-circle-male.png", size: "30x30" %>
     <!-- <image_tag ("avatar-cicle-male.png")> -->
     <!-- <img src="assets/images/icons/avatar-cicle-male.png" alt="edit" /> -->
    <div class="tablet-gender-info">
      <p><%= teacher.classroom.students.where(gender: "male").count %></p>
    </div>
  </div>
  <div class="tablet-bg-title-2">
    <%= image_tag "avatar-avatar-female.png", size: "30x30" %>
    <div class="tablet-gender-info">
       <%= teacher.classroom.students.where(gender: "female").count %>
    </div>
  </div>
</div>
<div class="d-flex">
   <div class="tablet-bg-title">
      <i class="fas fa-globe-americas"></i>
         <div class="tablet-icon-info">
            <%= teacher.classroom.students.where(esl: "true").count %>
         </div>
      </div>
    <div class="tablet-bg-title">
       <i class="fas fa-hat-wizard"></i>
          <div class="tablet-icon-info">
            <%= teacher.classroom.students.where(gifted_talented: "true").count %>
          </div>
    </div>
    <div class="tablet-bg-title">
      <i class="fas fa-star"></i>
          <div class="tablet-icon-info">
            <%= teacher.classroom.students.where(special_education: "true").count %>
          </div>
    </div>
    <div class="tablet-bg-title">
     <i class="fas fa-plus-square"></i>
          <div class="tablet-icon-info">
            <%= teacher.classroom.students.where(medical_alert: "true").count %>
          </div>
    </div>
</div>
