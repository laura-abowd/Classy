<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <%= link_to "/", class: "navbar-brand" do %>
  <%= image_tag("classy_logo.png", class: "img-responsive", id: "navbar-logo") %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if teacher_signed_in? %>
      <li class="nav-item active">
        <%= link_to "Home", root_path, class: "btn btn-flat mr-2" %>
      </li>


      <li class="nav-item dropdown">
        <%= image_tag "", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <i class="fas fa-chalkboard-teacher"></i>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Students", "/students", class: "dropdown-item" %>
          <%= link_to "Classrooms", "/classrooms", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_teacher_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Login", new_teacher_session_path, class: "nav-link" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>

