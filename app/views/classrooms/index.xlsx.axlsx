wb = xlsx_package.workbook


@nextgradeteachers.each do |teacher|

  wb.add_worksheet(name: "#{teacher.teacher_name}") do |sheet|

    sheet.add_row [ current_teacher.teacher_name + "'s 2020 class" ]
    sheet.add_row ["Downloaded at", Time.now.strftime("%b %-d, %Y")]

    sheet.add_row []

    sheet.add_row ["School ID", "First Name", "Last Name", "Gender", "Birthday", "ESL", "Gifted Talented", "Special Education", "Medical Alert"]

    teacher.classroom.students.each do |student|
      sheet.add_row [ student.schoolID, student.first_name, student.last_name, student.gender, student.birthday, student.esl, student.gifted_talented, student.special_education, student.medical_alert ]
    end

  end

end
